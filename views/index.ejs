<%- include("partials/header") %>

    <h1>Today's Tasks</h1>

    <div class="content">
        <% if(tasks.length === 0 || locals.tasks === undefined){  %>

            <p>No tasks available <hr></p>
            
        <% } else { %>

            <ul>
                <% tasks.forEach(task =>{ %>
                <li><input type="checkbox" class="" name="" id=""><%= task.taskName %> <span style="display: none;"><a href="/<% task._id %>">Delete</a></span><hr></li>
                <% }) %>
            </ul>

        <% } %>

        <form action="/" method="POST">
            <input type="text" name="task" placeholder="New task">
            <button type="submit">+</button>
        </form>
    </div>

<%- include("partials/footer") %>
